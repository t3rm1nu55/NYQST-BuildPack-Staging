{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NYQST Evidence",
  "type": "object",
  "required": [
    "contract_version",
    "evidence_id",
    "project_id",
    "source",
    "content",
    "created_at"
  ],
  "properties": {
    "contract_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "evidence_id": {
      "type": "string"
    },
    "project_id": {
      "type": "string"
    },
    "source": {
      "type": "object",
      "required": [
        "source_type"
      ],
      "properties": {
        "source_type": {
          "type": "string",
          "enum": [
            "BUNDLE_VERSION",
            "WEB_SNAPSHOT",
            "USER_NOTE"
          ]
        },
        "bundle_version_id": {
          "type": "string"
        },
        "artifact_id": {
          "type": "string"
        },
        "page": {
          "type": "integer"
        },
        "offset_start": {
          "type": "integer"
        },
        "offset_end": {
          "type": "integer"
        },
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "content": {
      "type": "string"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "created_by": {
      "type": "string"
    },
    "run_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}